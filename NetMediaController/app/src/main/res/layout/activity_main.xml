<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="za.co.codehaven.netmediacontroller.MainActivity"
    android:theme="@style/AppTheme">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <Button
            android:text="List Media"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:id="@+id/btnListMedia"
            android:theme="@style/AppTheme"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:elevation="0dp"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:onClick="onBtnListMediaClick" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />

        <Button
            android:text="List Devices"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:id="@+id/btnListDevices"
            android:theme="@style/AppTheme"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:elevation="0dp"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:onClick="onBtnListDevicesClick" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />

        <Button
            android:text="Downloaded Media"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:id="@+id/btnPlayMedia"
            android:theme="@style/AppTheme"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:elevation="0dp"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:onClick="onBtnPlayMediaClick" />
    </LinearLayout>

</RelativeLayout>
