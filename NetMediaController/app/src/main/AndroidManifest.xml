<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="za.co.codehaven.netmediacontroller">

    <uses-permission android:name="android.permission.INTERNET" ></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" ></uses-permission>


    <application
        tools:replace="android:theme"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/main_activity_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListMediaActivity"
            android:label="@string/list_media_activity_title"></activity>
        <activity
            android:name=".MediaDetailsActivity"
            android:label="@string/media_details_activity_title"></activity>
        <activity
            android:name=".ListDevicesActivity"
            android:label="@string/list_devices_activity_title"></activity>
        <activity
            android:name=".ListServerMediaActivity"
            android:label="@string/list_server_media_activity_title"></activity>
        <activity
            android:name=".PlayMediaActivity"
            android:label="@string/play_media_activity_title"></activity>
    </application>

</manifest>